<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/scoreLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pontos: 0"
        android:textSize="18sp"
        android:background="@android:color/white"
        android:textStyle="bold"
        android:paddingVertical="14dp"
        android:layout_marginBottom="20dp"
        />
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/box"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@drawable/box_right"
            android:layout_gravity="bottom"
            />

        <ImageView
            android:id="@+id/bolaLaranja"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/orange"
            />

        <ImageView
            android:id="@+id/bolaRosa"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pink"
            />
        <LinearLayout
            android:id="@+id/startLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            >
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basquete! Desenvolvido por Daniel Souza e João Pedro Freire"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/highScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maior pontuação: 3450"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="80dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMEÇAR"
                />

        </LinearLayout>
    </FrameLayout>



</LinearLayout>



